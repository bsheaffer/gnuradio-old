##OFDM Cyclic Prefixer
###################################################
 -->
<block>
	<name>OFDM Cyclic Prefixer</name>
	<key>gr_ofdm_cyclic_prefixer</key>
	<import>from gnuradio import gr</import>
	<make>gr.ofdm_cyclic_prefixer(
	  $fft_length, 
	  $sym_length)
	</make>
	<param>
		<name>FFT Length</name>
		<key>fft_length</key>
		<type>int</type>
	</param>
	<param>
		<name>Symbol Length</name>
		<key>sym_length</key>
		<type>int</type>
	</param>
	<sink>
		<name>in</name>
		<type>complex</type>
		<vlen>$fft_length</vlen>
	</sink>
	<source>
		<name>out</name>
		<type>complex</type>
	</source>
</block>
